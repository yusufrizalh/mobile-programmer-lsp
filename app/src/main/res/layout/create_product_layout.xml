<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="18dp"
        android:layout_marginBottom="12dp"
        android:text="CREATE NEW PRODUCT"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#F06292"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editProductName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:hint="Please enter product name"
        android:inputType="text"
        android:padding="8dp" />

    <EditText
        android:id="@+id/editProductPrice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:hint="Please enter product price"
        android:inputType="number"
        android:padding="8dp" />

    <EditText
        android:id="@+id/editProductDescription"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:hint="Please enter product description"
        android:inputType="text"
        android:padding="8dp"
        android:singleLine="false" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Submit" />

    <Button
        android:id="@+id/buttonViewProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Products" />

</LinearLayout>